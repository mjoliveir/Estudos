Algoritmo "MATRIZES"

Var
CINEMA : VETOR[1..10,1..10] DE CARACTER
OPCAO, I, J, LINHA, COLUNA: INTEIRO

Inicio
//INICIALMENTE, VAMOS POPULAR OS VALORES DA MATRIZ DE DUAS DIMENSÕES
PARA I DE 1 ATE 10 FAÇA
     PARA J DE 1 ATÉ 10 FAÇA
     CINEMA [I,J] <- "0"
     FIMPARA
FIMPARA

REPITA
      ESCREVAL("SEJA BEM VINDO AO NOSSO CINEMA, ESCOLHA O SERVIÇO DESEJADO")
      ESCREVAL("1 - RESERVAR")
      ESCREVAL("2 - LAYOUT")
      ESCREVAL("3 - SAIR")
LEIA (OPCAO)

     //

SE OPCAO = 1 ENTAO
   ESCREVAL("DIGITE A LINHA DESEJADA")
   LEIA (LINHA)
   ESCREVAL ("DIGITE A COLUNA DESEJADA")
   LEIA (COLUNA)
   SE CINEMA[LINHA,COLUNA] = "0" ENTAO
      CINEMA[LINHA,COLUNA] <- "X"
   SENAO
        ESCREVAL("POSICAO JA OCUPADA")
   FIMSE
FIMSE

SE OPCAO = 2 ENTAO
   PARA I DE 1 ATE 10 FACA
        PARA J DE 1 ATE 10 FACA
             ESCREVA (" ", CINEMA[I,J], " ")
             
        FIMPARA
   FIMPARA
FIMSE

   //

ATÉ OPCAO = 3


   


Fimalgoritmo