Algoritmo "ENQUANTO"

Var
ALTURAJOAO, ALTURAMARCELO, CRESCJOAO, CRESCMARCELO: REAL
IDADE: INTEIRO
Inicio
ALTURAJOAO <- 1.05
ALTURAMARCELO <- 1.20
CRESCJOAO <- 0.07
CRESCMARCELO <- 0.05
IDADE <- 8

ENQUANTO ALTURAJOAO < ALTURAMARCELO FAÇA
         ALTURAJOAO <- ALTURAJOAO + CRESCJOAO
         ALTURAMARCELO <-  ALTURAMARCELO + CRESCMARCELO
         IDADE <- IDADE + 1
FIMENQUANTO

ESCREVA ("JOAO TEM ",ALTURAJOAO,"CM, ENQUANTO MARCELO TEM ", ALTURAMARCELO,"CM E AMBOS TÊM ", IDADE, " ANOS" )

Fimalgoritmo