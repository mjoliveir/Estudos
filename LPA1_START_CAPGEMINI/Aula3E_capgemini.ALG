Algoritmo "MENU"

Var

OPCMENU, CONTADOR: INTEIRO

Inicio
CONTADOR <- 0
REPITA
      ESCREVA ("SELECIONE O SERVIÇO DESEJADO")
      ESCREVA ("1 - TROCA DE ÓLEO")
      ESCREVA ("2 - MANUTENÇÃO GERAL")
      ESCREVA ("3 - MANUTENÇÃO EELTRICA")
      ESCREVA ("4 - SAIR")
      LEIA (OPCMENU)
      SE OPCMENU = 1 ENTAO
         CONTADOR <- CONTADOR + 200
         ESCREVA ("FORAM ADICIONADOS R$:200 EM SEU CARRINHO SEU TOTAL É ", CONTADOR)
      FIMSE
      SE OPCMENU = 2 ENTAO
         CONTADOR <- CONTADOR + 500
         ESCREVA ("FORAM ADICIONADOS R$:500 EM SEU CARRINHO SEU TOTAL É ", CONTADOR)
      FIMSE
      SE OPCMENU = 3 ENTAO
         CONTADOR <- CONTADOR + 600
         ESCREVA ("FORAM ADICIONADOS R$:600 EM SEU CARRINHO SEU TOTAL É ", CONTADOR)
      FIMSE
      
ATÉ OPCMENU = 4
Fimalgoritmo